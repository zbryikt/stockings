@import 'vars'
@import 'basic'

+keyframes(blink)
  0%
    opacity: 1
  100%
    opacity: 0.3
#landing
  width: 100%
  height: 100%
  background: url(/img/sample/landing.jpg) center center
  background-size: cover
  position: relative
  .title
    position: absolute
    width: 100%
    top: 44%
    left: 0
    margin: -50px 0 0
    color: #fff
    text-align: center
    font-size: 3em
    .subtitle
      font-size: 0.5em
    .desc
      font-size: 0.25em
      font-weight: 100
      width: 320px
      margin: 50px auto
      opacity: 0.85
  .fa.fa-chevron-down
    position: absolute
    bottom: 20px
    left: 50%
    font-size: 64px
    color: #fff
    margin: -32px 0 0 -32px
    animation(blink 0.8s infinite linear)
    text-decoration: none

@media(max-width: 800px)
  #landing
    .title
      font-size: 2em
      .subtitle
        font-size: 0.6em
      .desc
        font-size: 0.5em
@media(max-width: 480px)
  #landing
    .title
      font-size: 1.5em
      .subtitle
        font-size: 0.6em
      .desc
        font-size: 0.45em
    .fa.fa-chevron-down
      font-size: 32px
      margin: -16px 0 0 -16px
