@import 'vars'
@import 'basic'

#feature
  border-top: 12px solid #444
  border-bottom: 2px solid #ccc
  .row
    margin: 0

  width: 100%
  min-height: 450px
  background: #f5f5f5
  .photo
    width: 260px
    height: 300px
    background: #ddd
    border-radius: 20px
    margin: auto
    box-shadow: 0 4px 0 0px #999
    background-size: cover
    background-position: 20% 50%
  .features
    font-size: 0.8em
    .feature
      //width: 120px
      //height: 115px
      width: 100%
      height: 165px
      background: #ddd
      margin: auto
      border-radius: 10px
      margin-bottom: 10px
      box-shadow: 0 4px 0 0px #999
      background-size: cover
      background-position: center center

@media (max-width: 768px)
  #feature
    .photo
      width: 90%
      margin: auto
      height: 240px
      margin-bottom: 20px
    h2
      text-align: center
      display: block

@media (max-width: 480px)
  #feature
    .photo
      width: 100%
      border-radius: 0
    .row .col-sm-8
      padding: 0
    .row .col-sm-4
      padding: 0
    .row .col-xs-4
      padding: 0
      .feature
        width: 100%
        border-radius: 0
      b
        display: block
