@import 'vars'
@import 'basic'

#form .row
  margin: 0
  .photo
    background-size: contain
    background-position: center center
    background-repeat: no-repeat
    background-color: #fff

#form .form
  margin: 10px
  .inner
    position: relative
    background: #f5f5f5
    border: 1px solid #eee
    border-radius: 3px
    padding: 3px 8px 10px
    box-shadow: 0 2px 3px rgba(0,0,0,0.3)
    h3
      margin: 5px 0 3px
    .mask
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(0,0,0,0.3)
      z-index: index(order, 'mask')
      border-radius: 3px
  label
    font-size: 16px
@media(max-width:768px)
  #form .form
    .col-sm-3, .col-sm-6
      padding: 0
  #form .choices.row
    .col-sm-3, .col-sm-4
      border-top: 1px solid #eee
      padding: 10px 10px 35px
    .col-sm-1:last-child
      border-bottom: 1px solid #eee
@media(max-width:768px)
  #form .sep.wide-gap
    display: none

#thanks
  position: fixed
  top: 0
  left: 0
  z-index: index(order, 'thanks')
  width: 100%
  height: 100%
  background: rgba(255,255,255,0.9)
  .inner
    position: absolute
    top: 50%
    width: 100%
    left: 0
    margin-top: -50px
  opacity: 0
  z-index: -1
  &.active
    transition(all 0.5s linear)
    opacity: 1
    z-index: index(order, 'thanks')
