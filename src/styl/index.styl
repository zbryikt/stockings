@import 'vars'
@import 'basic'

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-size: 20px
  font-family: 'Noto Sans TC', sans-serif

h1,h2,h3,h4,h5,h6,p,.section,.title
  font-family: 'Noto Sans TC', sans-serif

h2
  margin: 20px
  border-bottom: 4px solid #f42
  display: inline-block
  padding-bottom: 5px

.tiny
  font-size: 0.65em

.grayed
  color: #999

.sep
  width: 100%
  height: 0px
  border-top: 1px solid #ddd
  margin: 10px 0

.sep.gap
  margin: 20px 0

.sep.wide-gap
  margin: 30px 0

.spc
  width: 0px
  height: 1px
  overflow: hidden
  &:after
    content: " "
    display: inline
.section
  //max-width: 1280px
  margin: auto
  // padding: 10px

.inner
  max-width: 960px
  margin: auto


#form
  width: 100%
  min-height: 500px
  background: #fff
  .form
    max-width: 960px
    margin: auto

#about
  width: 100%
  min-height: 400px
  background: #f9f9f9

#footer
  width: 100%
  min-height: 100px
  background: #555
  color: #eee
  font-size: 14px
  font-weight: 200
  b
    font-weight: 500

.goods
  .photo
    width: 200px
    height: 200px
    background: #eee
    border-radius: 10px
    margin: auto
  .title
    font-size: 1.2em
    font-weight: 700
    margin: 5px
  select
    width: 200px
    margin: auto
@media(max-width: 768px)
  .goods .photo
    width: 100%
.item
  .price
    float: right

@import 'landing'
@import 'feature'
@import 'form'
@import 'about'
@import 'footer'

